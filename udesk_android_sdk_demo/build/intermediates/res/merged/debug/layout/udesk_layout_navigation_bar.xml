<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/udesk_navi_height"
    android:background="@drawable/udesk_navi_bg"
    android:padding="@dimen/udesk_navi_padding" >

    <TextView
        android:id="@+id/udesk_navi_right"
        style="@style/udesk_navi_button_text_style"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="@dimen/udesk_navi_right_margin" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/udesk_navi_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@color/udesk_color_navi_text_center"
            android:textSize="@dimen/udesk_navi_title_size" />

        <TextView
            android:id="@+id/udesk_agent_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginTop="2dp"
            android:textColor="@color/udesk_color_navi_text_center"
            android:textSize="12sp"
            android:visibility="gone"
           />
    </LinearLayout>

    <TextView
        android:id="@+id/udesk_navi_left"
        style="@style/udesk_navi_button_text_style"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="14dp"
        android:drawableLeft="@drawable/udesk_navi_back"
        android:text="@string/udesk_navi_back" />


<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/udesk_im_record_item_panel"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/udesk_im_item_padding_top_bottom"
    android:paddingLeft="@dimen/udesk_im_item_padding_left_right_min"
    android:paddingRight="@dimen/udesk_im_item_padding_left_right_max"
    android:paddingTop="@dimen/udesk_im_item_padding_top_bottom"
    >
 

    <include layout="@layout/udesk_im_avatar" />

    <RelativeLayout
        android:id="@+id/udesk_im_record_item_content"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:paddingBottom="11dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="11dp" >

        <ImageView
            android:id="@+id/udesk_im_item_record_play"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:src="@drawable/udesk_im_record_left_default" />

        <TextView
            android:id="@+id/udesk_im_item_record_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="18dp"
            android:alpha="0.5"
            android:gravity="center"
            android:padding="5dp"
            android:text="999999999"
            android:textColor="#ffffff"
            android:textSize="18sp" />

    </RelativeLayout>

    <include layout="@layout/udesk_im_send_state" />

</RelativeLayout><!-- From: file:/Users/qinfeng/Documents/AndroidStudioProjects/apkplug_component_sdk/uDesklibrary/src/main/res/layout/udesk_im_record_item.xml -->
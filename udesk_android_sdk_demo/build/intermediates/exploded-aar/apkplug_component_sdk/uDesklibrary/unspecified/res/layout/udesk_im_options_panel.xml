<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/udesk_bottom_options"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="15dp"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="15dp"
    android:visibility="gone">

    <ImageView
        android:id="@+id/udesk_bottom_option_camera"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:src="@drawable/udesk_ic_option_camera" />
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:text="拍照"
        android:textSize="14sp"
        android:layout_marginTop="25dp"
        android:textColor="#808080"/>

    <View  android:layout_width="20dp"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/udesk_bottom_option_photo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:src="@drawable/udesk_ic_option_photo" />
	 <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:text="图片"
        android:layout_marginTop="25dp"
        android:textSize="14sp"
        android:textColor="#808080"/>

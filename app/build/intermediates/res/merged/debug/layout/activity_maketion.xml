<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="脉可寻SDK" />

    
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/maketionsdk_authenticate_btn"
                android:layout_width="0dip"
                android:layout_height="50dip"
                android:layout_weight="1"
                android:text="验证" />

            <Button
                android:id="@+id/maketionsdk_authenticate_status_btn"
                android:layout_width="0dip"
                android:layout_height="50dip"
                android:layout_weight="1"
                android:text="验证状态" />

            <Button
                android:id="@+id/maketionsdk_clear_authentication_btn"
                android:layout_width="0dip"
                android:layout_height="50dip"
                android:layout_weight="1"
                android:text="清除验证" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/maketionsdk_take_pic_btn"
                android:layout_width="0dip"
                android:layout_height="50dip"
                android:layout_weight="1"
                android:text="拍照" />

            <Button
                android:id="@+id/maketionsdk_get_data_btn"
                android:layout_width="0dip"
                android:layout_height="50dip"
                android:layout_weight="1"
                android:text="获取数据" />
            
            <Button
                android:id="@+id/maketionsdk_set_savepath_btn"
                android:layout_width="0dip"
                android:layout_height="50dip"
                android:layout_weight="1"
                android:text="设置保存路径" />

        </LinearLayout>
</LinearLayout><!-- From: file:/Users/qinfeng/Documents/AndroidStudioProjects/apkplug_component_sdk/app/src/main/res/layout/activity_maketion.xml -->